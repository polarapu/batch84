=============================
touch file1
ls
git status
git add file1  (workspace to staging/index)
git status
git commit -m "label" file1  (staging to local)
git status
git log
git show cid

============================

touch file3 file4 file5
ls
git status
git add file3 file4 file5
or
git add .
or
git add *
or
git add -A

git status
git commit -m "label"
git status
git log


=======================
git clone https://github.com/polarapu/batch84.git
ls
cd batch84
ls
touch file1
git status
git add .
git commit -m "smaple file"
git push

rm -rf file1
ls
git add .
git commit -m "deleted file"
git push


=============================
mkdir dir1
ls
git status
cd dir1
touch f1 f2
cd ..
git status
git add .
git commit -m "sample dir"
git push

=================================================
